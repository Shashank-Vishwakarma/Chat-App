<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userimage_chat_to"
        android:layout_width="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#56806E"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usermessage_chat_to"
        app:layout_constraintTop_toTopOf="@+id/userimage_chat_to"
        android:text="This is my message from shashank vishwakarma and saumya tripathi"
        android:layout_marginRight="8dp"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@drawable/edittext_shape"
        app:layout_constraintRight_toLeftOf="@id/userimage_chat_to"/>
</androidx.constraintlayout.widget.ConstraintLayout>